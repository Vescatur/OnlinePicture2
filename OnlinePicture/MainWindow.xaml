<Window x:Class="OnlinePicture.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OnlinePicture"
        mc:Ignorable="d"
        Title="MainWindow" Height="810" Width="1800">
    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="140*"/>
            <RowDefinition Height="20*"/>
        </Grid.RowDefinitions>
        <Canvas x:Name="myCanvas" HorizontalAlignment="Center"  VerticalAlignment="Center" Height="260" Width="500" Margin="10" />
        <Button x:Name="Refresh" Content="Button" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="10,10,0,0" Grid.Row="1" Height="22" Click="Refresh_Click"/>
    </Grid>
</Window>
